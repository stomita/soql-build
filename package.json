{
  "name": "soql-build",
  "version": "1.1.0",
  "description": "Securely build SOQL string from JSON-based query structure",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run build:lib && npm run build:flow",
    "build:lib": "babel -d lib/ src/",
    "build:flow": "flow-copy-source -v src/ lib/",
    "flow": "flow",
    "lint": "eslint src/ test/",
    "test": "npm run flow && npm run test:mocha",
    "test:mocha": "NODE_ENV=test mocha --compilers js:babel-register"
  },
  "author": "Shinichi Tomita <shinichi.tomita@gmail.com>",
  "license": "MIT",
  "files": [
    ".babelrc",
    ".flowconfig",
    "flow-typed",
    "lib",
    "src"
  ],
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.24.1",
    "eslint": "^4.3.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "flow-bin": "^0.51.1",
    "flow-copy-source": "^1.2.0",
    "mocha": "^3.5.0",
    "power-assert": "^1.4.4"
  }
}
